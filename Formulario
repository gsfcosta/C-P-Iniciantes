                    Console.WriteLine("Requires: 3 or more characters and not contain space");
                }
                else if (lenght < 3)
                {
                    Console.WriteLine("Invalid Last Name!");
                    Console.WriteLine("Requires: 3 or more characters and not contain space");
                }
                else
                {
                    break;
                }
            }
            while (true);

            string email;
            string[] emailSpace;

            do
            {
                Console.Write("First Name: ");
                firstname = Console.ReadLine();
                lenght = firstname.Length;
                nameSpace = firstname.Split(' ');
                if (nameSpace.Length > 2)
                {
                    Console.WriteLine("Invalid First Name!");
                    Console.WriteLine("Requires: more than 5 characters and contain max one space");
                }
